      <button class="btn btn-secondary" onclick="closeEdit()">Cancel</button>
      <button class="btn btn-primary" onclick="saveEdit()">Save Changes</button>
    </div>

    <div class="box-path" id="editFooter">Last modified: 2025-01-15 18:45:32 | User: admin</div>
  </div>

  <script>
    let currentParamPath = '';

    let currentStationId = null;

    function showLevel2(stationId) {
      currentStationId = stationId;
      document.getElementById('level1').style.display = 'none';
      document.getElementById('level2').style.display = 'block';
      document.getElementById('currentLevel').textContent = 'LEVEL 2';

      // Update station title
      const stationName = stationsData[stationId]?.name || stationId;
      document.getElementById('level2-station-title').textContent = stationName.toUpperCase() + ' - ALL 75 PARAMETERS';

      // Generate all 75 parameter boxes
      generateAllParameterBoxes(stationId);

      console.log('Showing Level 2 for:', stationId);
    }

    function backToLevel1() {
      document.getElementById('level1').style.display = 'grid';
      document.getElementById('level2').style.display = 'none';
      document.getElementById('currentLevel').textContent = 'LEVEL 1';
    }

    function showEdit(paramId, paramPath) {
      currentParamPath = paramPath;
      document.getElementById('editBox').classList.add('active');
      document.getElementById('overlay').classList.add('active');
      document.getElementById('currentLevel').textContent = 'LEVEL 3 - EDIT MODE';
      document.getElementById('paramPath').value = paramPath;

      // Load config from unified config file (simulated)
      loadParamConfig(paramPath);

      console.log('Editing parameter:', paramId, 'Path:', paramPath);
    }

    function closeEdit() {
      document.getElementById('editBox').classList.remove('active');
      document.getElementById('overlay').classList.remove('active');
      document.getElementById('currentLevel').textContent = 'LEVEL 2';
    }

    function loadParamConfig(paramPath) {
      // In production, this would fetch from /tmp/monitoring-config-values.json
      // For demo, we'll use hardcoded values
      const configs = {
        'station-2.udp-tx.buffer.total': {
          title: 'TOTAL BUFFER',
          value: 78,
          unit: '%',
          status: 'warning',
          thresholds: { criticalLow: 10, criticalHigh: 95, warningLow: 20, warningHigh: 80, optimal: 50 },
          alerts: { audioAlert: true, visualAlert: true, emailAlert: false, webhookAlert: false },
          updateInterval: 1000
        },
        'station-2.udp-tx.latency.avg': {
          title: 'AVERAGE LATENCY',
          value: 298,
          unit: 'ms',
          status: 'critical',
          thresholds: { criticalLow: 0, criticalHigh: 300, warningLow: 0, warningHigh: 200, optimal: 50 },
          alerts: { audioAlert: true, visualAlert: true, emailAlert: true, webhookAlert: false },
          updateInterval: 500
        },
        'station-2.udp-tx.packet.lossRate': {
          title: 'PACKET LOSS RATE',
          value: 3.2,
          unit: '%',
          status: 'warning',
          thresholds: { criticalLow: 0, criticalHigh: 3, warningLow: 0, warningHigh: 1, optimal: 0 },
          alerts: { audioAlert: true, visualAlert: true, emailAlert: true, webhookAlert: true },
          updateInterval: 1000
        }
      };

      const config = configs[paramPath];
      if (config) {
        document.getElementById('editTitle').textContent = config.title + ' - EDIT MODE';
        document.getElementById('editValue').innerHTML = config.value + '<span class="box-unit">' + config.unit + '</span>';
        document.getElementById('criticalLow').value = config.thresholds.criticalLow;
        document.getElementById('criticalHigh').value = config.thresholds.criticalHigh;
        document.getElementById('warningLow').value = config.thresholds.warningLow;
        document.getElementById('warningHigh').value = config.thresholds.warningHigh;
        document.getElementById('optimal').value = config.thresholds.optimal;
        document.getElementById('updateInterval').value = config.updateInterval;
        document.getElementById('audioAlert').checked = config.alerts.audioAlert;
        document.getElementById('visualAlert').checked = config.alerts.visualAlert;
        document.getElementById('emailAlert').checked = config.alerts.emailAlert;
        document.getElementById('webhookAlert').checked = config.alerts.webhookAlert;
      }
    }

    function saveEdit() {
      const updatedConfig = {
        path: currentParamPath,
        thresholds: {
          criticalLow: parseFloat(document.getElementById('criticalLow').value),
          criticalHigh: parseFloat(document.getElementById('criticalHigh').value),
          warningLow: parseFloat(document.getElementById('warningLow').value),
          warningHigh: parseFloat(document.getElementById('warningHigh').value),
          optimal: parseFloat(document.getElementById('optimal').value)
        },
        alerts: {
          audioAlert: document.getElementById('audioAlert').checked,
          visualAlert: document.getElementById('visualAlert').checked,
          emailAlert: document.getElementById('emailAlert').checked,
          webhookAlert: document.getElementById('webhookAlert').checked
        },
        updateInterval: parseInt(document.getElementById('updateInterval').value)
      };

      console.log('Saving configuration:', updatedConfig);

      // In production, this would:
      // 1. POST to monitoring server: /api/config/update
      // 2. Server writes to /tmp/monitoring-config-values.json
      // 3. STTTTSserver reads updated values on next cycle

      alert('‚úì Configuration saved to unified config file!\n\nPath: ' + currentParamPath + '\n\nThe STTTTSserver will load these values on next update cycle.');
      closeEdit();
    }

    function resetToDefault() {
      if (confirm('Reset all thresholds to default values?')) {
        // Load defaults (would come from server in production)
        alert('Configuration reset to factory defaults.');
      }
    }

    document.addEventListener('keydown', function(e) {
      if (e.key === 'Escape') {
        closeEdit();
      }
    });

