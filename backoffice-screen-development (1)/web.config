<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>
    <handlers>
      <add name="iisnode" path="server.js" verb="*" modules="iisnode"/>
    </handlers>
    
    <rewrite>
      <rules>
        <!-- Rewrite all requests to the base path to the Next.js server -->
        <rule name="DynamicContent">
          <match url="^3333_4444__Operational/public/Monitoring_Dashboard/(.*)"/>
          <action type="Rewrite" url="server.js"/>
        </rule>
        
        <!-- Handle root path redirect -->
        <rule name="RootRedirect" stopProcessing="true">
          <match url="^$"/>
          <action type="Redirect" url="/3333_4444__Operational/public/Monitoring_Dashboard/" redirectType="Permanent"/>
        </rule>
        
        <!-- Serve static files directly -->
        <rule name="StaticContent" stopProcessing="true">
          <match url="^3333_4444__Operational/public/Monitoring_Dashboard/_next/(.*)"/>
          <action type="Rewrite" url="{R:0}"/>
        </rule>
      </rules>
    </rewrite>
    
    <!-- Security -->
    <security>
      <requestFiltering>
        <hiddenSegments>
          <remove segment="bin"/>
        </hiddenSegments>
      </requestFiltering>
    </security>
    
    <!-- Logging for debugging -->
    <iisnode 
      nodeProcessCommandLine="node"
      watchedFiles="*.js"
      loggingEnabled="true"
      devErrorsEnabled="true"/>
      
    <!-- Environment variables -->
    <iisnode>
      <environmentVariables>
        <add name="NODE_ENV" value="production"/>
        <add name="NEXT_PUBLIC_API_URL" value="https://20.170.155.53:8080"/>
      </environmentVariables>
    </iisnode>
    
    <httpErrors existingResponse="PassThrough"/>
  </system.webServer>
</configuration>
