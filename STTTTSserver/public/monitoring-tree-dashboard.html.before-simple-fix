    // ============================================
    // Generate Edit Fields HTML Based on Parameter Type
    // ============================================
    function generateEditFieldsHTML(param, config) {
      const category = param.cat.toLowerCase();
      const ranges = config.ranges || { min: 0, max: 100, recommendedMin: 20, recommendedMax: 80 };
      const thresholds = config.thresholds || { criticalLow: null, warningLow: null, warningHigh: null, criticalHigh: null };
      const alerts = config.alerts || { enabled: true, audioAlert: true, visualAlert: true, emailAlert: false, webhookAlert: false };
      const metadata = config.metadata || { updateFrequency: 1000, priority: 'medium' };
      const opSettings = config.operationalSettings || {};

      let html = '<div class="edit-section-title">THRESHOLDS</div>';
      html += `<div class="edit-field"><div class="edit-field-label">Warning Low</div><input type="number" class="edit-field-input" data-field="thresholds.warningLow" value="${thresholds.warningLow || ''}" min="${ranges.min}" max="${ranges.max}" placeholder="null=disabled"></div>`;
      html += `<div class="edit-field"><div class="edit-field-label">Warning High</div><input type="number" class="edit-field-input" data-field="thresholds.warningHigh" value="${thresholds.warningHigh || ''}" min="${ranges.min}" max="${ranges.max}"></div>`;
      html += `<div class="edit-field"><div class="edit-field-label">Critical Low</div><input type="number" class="edit-field-input" data-field="thresholds.criticalLow" value="${thresholds.criticalLow || ''}" min="${ranges.min}" max="${ranges.max}" placeholder="null=disabled"></div>`;
      html += `<div class="edit-field"><div class="edit-field-label">Critical High</div><input type="number" class="edit-field-input" data-field="thresholds.criticalHigh" value="${thresholds.criticalHigh || ''}" min="${ranges.min}" max="${ranges.max}"></div>`;

      html += '<div class="edit-section-title">RECOMMENDED RANGE</div>';
      html += `<div class="edit-field"><div class="edit-field-label">Recommended Min (${param.unit})</div><input type="number" class="edit-field-input" data-field="ranges.recommendedMin" value="${ranges.recommendedMin}" min="${ranges.min}" max="${ranges.max}"></div>`;
      html += `<div class="edit-field"><div class="edit-field-label">Recommended Max (${param.unit})</div><input type="number" class="edit-field-input" data-field="ranges.recommendedMax" value="${ranges.recommendedMax}" min="${ranges.min}" max="${ranges.max}"></div>`;

      html += '<div class="edit-section-title">ALERTS</div>';
      html += `<div class="edit-field"><div class="edit-field-checkbox"><input type="checkbox" data-field="alerts.enabled" ${alerts.enabled?'checked':''}><span>Alerts Enabled</span></div></div>`;
      html += `<div class="edit-field"><div class="edit-field-checkbox"><input type="checkbox" data-field="alerts.audioAlert" ${alerts.audioAlert?'checked':''}><span>Audio Alert</span></div></div>`;
      html += `<div class="edit-field"><div class="edit-field-checkbox"><input type="checkbox" data-field="alerts.visualAlert" ${alerts.visualAlert?'checked':''}><span>Visual Alert</span></div></div>`;

      // CATEGORY-SPECIFIC OPERATIONAL SETTINGS
      if (category === 'buffer') {
        html += '<div class="edit-section-title">BUFFER SETTINGS (OPERATIONAL)</div>';
        const bufferSize = opSettings.bufferSize || { value: 512, min: 64, max: 4096, step: 64 };
        const bufferCount = opSettings.bufferCount || { value: 4, min: 2, max: 32, step: 1 };
        const autoAdjust = opSettings.autoAdjust || { value: true };
        const preallocation = opSettings.preallocation || { value: true };
        html += `<div class="edit-field"><div class="edit-field-label">Buffer Size (KB)</div><input type="number" class="edit-field-input" data-field="operationalSettings.bufferSize" value="${bufferSize.value}" min="${bufferSize.min}" max="${bufferSize.max}" step="${bufferSize.step}"></div>`;
        html += `<div class="edit-field"><div class="edit-field-label">Buffer Count</div><input type="number" class="edit-field-input" data-field="operationalSettings.bufferCount" value="${bufferCount.value}" min="${bufferCount.min}" max="${bufferCount.max}" step="${bufferCount.step}"></div>`;
        html += `<div class="edit-field"><div class="edit-field-checkbox"><input type="checkbox" data-field="operationalSettings.autoAdjust" ${autoAdjust.value?'checked':''}><span>Auto Adjust Buffer Size</span></div></div>`;
        html += `<div class="edit-field"><div class="edit-field-checkbox"><input type="checkbox" data-field="operationalSettings.preallocation" ${preallocation.value?'checked':''}><span>Pre-allocate Buffers at Startup</span></div></div>`;
      }

      if (category === 'latency') {
        html += '<div class="edit-section-title">LATENCY CONTROL</div>';
        html += '<div class="edit-field"><div class="edit-field-label">Max Acceptable Latency (ms)</div><input type="number" class="edit-field-input" data-field="settings.maxAcceptableLatency" value="150" min="10" max="1000" step="10"></div>';
        html += '<div class="edit-field"><div class="edit-field-label">Jitter Buffer Mode</div><select class="edit-field-select" data-field="settings.jitterBufferMode"><option value="fixed">Fixed</option><option value="adaptive" selected>Adaptive</option><option value="disabled">Disabled</option></select></div>';
        html += '<div class="edit-field"><div class="edit-field-checkbox"><input type="checkbox" data-field="settings.latencyCompensation" checked><span>Enable Latency Compensation</span></div></div>';
      }

      if (category === 'packet') {
        html += '<div class="edit-section-title">PACKET HANDLING</div>';
        html += '<div class="edit-field"><div class="edit-field-label">Max Packet Loss (%)</div><input type="number" class="edit-field-input" data-field="settings.maxPacketLoss" value="1.0" min="0" max="10" step="0.1"></div>';
        html += '<div class="edit-field"><div class="edit-field-label">Max Retransmit Attempts</div><input type="number" class="edit-field-input" data-field="settings.retransmitMaxAttempts" value="3" min="1" max="10" step="1"></div>';
        html += '<div class="edit-field"><div class="edit-field-checkbox"><input type="checkbox" data-field="settings.fecEnabled" checked><span>Forward Error Correction (FEC)</span></div></div>';
        html += '<div class="edit-field"><div class="edit-field-checkbox"><input type="checkbox" data-field="settings.retransmitEnabled" checked><span>Enable Packet Retransmission</span></div></div>';
      }

      if (category === 'audio' || category === 'audioquality') {
        html += '<div class="edit-section-title">AUDIO FORMAT (OPERATIONAL)</div>';
        const sampleRate = opSettings.sampleRate || { value: 16000, options: [8000, 16000, 22050, 44100, 48000] };
        const bitDepth = opSettings.bitDepth || { value: 16, options: [8, 16, 24, 32] };
        const channels = opSettings.channels || { value: 1, options: [1, 2] };
        const codec = opSettings.codec || { value: 'pcm_s16le', options: ['pcm_s16le', 'pcm_mulaw', 'pcm_alaw', 'opus', 'mp3'] };

        if (sampleRate.options) {
          html += `<div class="edit-field"><div class="edit-field-label">Sample Rate (Hz) - SYSTEM CONFIG</div><select class="edit-field-select" data-field="operationalSettings.sampleRate">`;
          sampleRate.options.forEach(rate => {
            html += `<option value="${rate}" ${rate === sampleRate.value ? 'selected' : ''}>${rate} Hz ${rate === 8000 ? '(8kHz)' : rate === 16000 ? '(16kHz)' : ''}</option>`;
          });
          html += '</select></div>';
        }

        if (bitDepth.options) {
          html += `<div class="edit-field"><div class="edit-field-label">Bit Depth</div><select class="edit-field-select" data-field="operationalSettings.bitDepth">`;
          bitDepth.options.forEach(depth => {
            html += `<option value="${depth}" ${depth === bitDepth.value ? 'selected' : ''}>${depth}-bit</option>`;
          });
          html += '</select></div>';
        }

        if (channels.options) {
          html += `<div class="edit-field"><div class="edit-field-label">Channels</div><select class="edit-field-select" data-field="operationalSettings.channels">`;
          channels.options.forEach(ch => {
            html += `<option value="${ch}" ${ch === channels.value ? 'selected' : ''}>${ch === 1 ? 'Mono (1)' : 'Stereo (2)'}</option>`;
          });
          html += '</select></div>';
        }

        if (codec.options) {
          html += `<div class="edit-field"><div class="edit-field-label">Codec</div><select class="edit-field-select" data-field="operationalSettings.codec">`;
          codec.options.forEach(c => {
            html += `<option value="${c}" ${c === codec.value ? 'selected' : ''}>${c.toUpperCase()}</option>`;
          });
          html += '</select></div>';
        }

        html += '<div class="edit-section-title">AUDIO QUALITY THRESHOLDS</div>';
        const minSNR = opSettings.minSNR || { value: 25, min: 10, max: 60 };
        const targetMOS = opSettings.targetMOS || { value: 4.0, min: 1.0, max: 5.0 };
        html += `<div class="edit-field"><div class="edit-field-label">Min SNR (dB)</div><input type="number" class="edit-field-input" data-field="operationalSettings.minSNR" value="${minSNR.value}" min="${minSNR.min}" max="${minSNR.max}" step="1"></div>`;
        html += `<div class="edit-field"><div class="edit-field-label">Target MOS Score</div><input type="number" class="edit-field-input" data-field="operationalSettings.targetMOS" value="${targetMOS.value}" min="${targetMOS.min}" max="${targetMOS.max}" step="0.1"></div>`;
      }

      if (category === 'perf' || category === 'performance') {
        html += '<div class="edit-section-title">PERFORMANCE LIMITS</div>';
        html += '<div class="edit-field"><div class="edit-field-label">CPU Limit (%)</div><input type="number" class="edit-field-input" data-field="settings.cpuLimit" value="80" min="10" max="100" step="5"></div>';
        html += '<div class="edit-field"><div class="edit-field-label">Memory Limit (MB)</div><input type="number" class="edit-field-input" data-field="settings.memoryLimit" value="2048" min="256" max="8192" step="256"></div>';
        html += '<div class="edit-field"><div class="edit-field-label">Thread Pool Size</div><input type="number" class="edit-field-input" data-field="settings.threadPoolSize" value="4" min="1" max="32" step="1"></div>';
      }

      if (category === 'dsp') {
        if (param.id.includes('.agc.')) {
          html += '<div class="edit-section-title">AGC SETTINGS</div>';
          html += '<div class="edit-field"><div class="edit-field-label">AGC Mode</div><select class="edit-field-select" data-field="settings.agcMode"><option value="off">Off</option><option value="soft">Soft</option><option value="medium" selected>Medium</option><option value="aggressive">Aggressive</option></select></div>';
          html += '<div class="edit-field"><div class="edit-field-label">Target Level (dBFS)</div><input type="number" class="edit-field-input" data-field="settings.targetLevel" value="-12" min="-30" max="-3" step="1"></div>';
          html += '<div class="edit-field"><div class="edit-field-label">Max Gain (dB)</div><input type="number" class="edit-field-input" data-field="settings.maxGain" value="20" min="0" max="40" step="1"></div>';
          html += '<div class="edit-field"><div class="edit-field-label">Attack Time (ms)</div><input type="number" class="edit-field-input" data-field="settings.attackTime" value="10" min="1" max="100" step="1"></div>';
          html += '<div class="edit-field"><div class="edit-field-label">Release Time (ms)</div><input type="number" class="edit-field-input" data-field="settings.releaseTime" value="100" min="10" max="1000" step="10"></div>';
        } else if (param.id.includes('.aec.')) {
          html += '<div class="edit-section-title">AEC SETTINGS</div>';
          html += '<div class="edit-field"><div class="edit-field-label">AEC Mode</div><select class="edit-field-select" data-field="settings.aecMode"><option value="off">Off</option><option value="standard" selected>Standard</option><option value="enhanced">Enhanced</option></select></div>';
          html += '<div class="edit-field"><div class="edit-field-label">Tail Length (ms)</div><select class="edit-field-select" data-field="settings.tailLength"><option value="64">64</option><option value="128" selected>128</option><option value="256">256</option><option value="512">512</option></select></div>';
          html += '<div class="edit-field"><div class="edit-field-checkbox"><input type="checkbox" data-field="settings.nlpEnabled" checked><span>Non-Linear Processing (NLP)</span></div></div>';
        } else if (param.id.includes('.nr.') || param.id.includes('noise')) {
          html += '<div class="edit-section-title">NOISE REDUCTION</div>';
          html += '<div class="edit-field"><div class="edit-field-label">NR Mode</div><select class="edit-field-select" data-field="settings.nrMode"><option value="off">Off</option><option value="low">Low</option><option value="medium" selected>Medium</option><option value="high">High</option></select></div>';
          html += '<div class="edit-field"><div class="edit-field-label">Noise Floor (dBFS)</div><input type="number" class="edit-field-input" data-field="settings.noiseFloor" value="-60" min="-90" max="-30" step="1"></div>';
        } else if (param.id.includes('.comp.')) {
          html += '<div class="edit-section-title">COMPRESSOR</div>';
          html += '<div class="edit-field"><div class="edit-field-label">Threshold (dBFS)</div><input type="number" class="edit-field-input" data-field="settings.compThreshold" value="-20" min="-60" max="0" step="1"></div>';
          html += '<div class="edit-field"><div class="edit-field-label">Ratio</div><select class="edit-field-select" data-field="settings.compRatio"><option value="1:1">1:1</option><option value="2:1">2:1</option><option value="4:1" selected>4:1</option><option value="8:1">8:1</option><option value="16:1">16:1</option></select></div>';
          html += '<div class="edit-field"><div class="edit-field-label">Attack (ms)</div><input type="number" class="edit-field-input" data-field="settings.compAttack" value="5" min="0.1" max="50" step="0.1"></div>';
          html += '<div class="edit-field"><div class="edit-field-label">Release (ms)</div><input type="number" class="edit-field-input" data-field="settings.compRelease" value="100" min="10" max="1000" step="10"></div>';
        } else if (param.id.includes('.limiter.')) {
          html += '<div class="edit-section-title">LIMITER</div>';
          html += '<div class="edit-field"><div class="edit-field-label">Limit Threshold (dBFS)</div><input type="number" class="edit-field-input" data-field="settings.limitThreshold" value="-1" min="-12" max="0" step="0.1"></div>';
          html += '<div class="edit-field"><div class="edit-field-label">Release (ms)</div><input type="number" class="edit-field-input" data-field="settings.limitRelease" value="50" min="1" max="100" step="1"></div>';
        } else if (param.id.includes('.eq.') || param.id.includes('equalizer')) {
          html += '<div class="edit-section-title">EQUALIZER</div>';
          html += '<div class="edit-field"><div class="edit-field-label">EQ Preset</div><select class="edit-field-select" data-field="settings.eqPreset"><option value="flat">Flat</option><option value="voice" selected>Voice</option><option value="music">Music</option><option value="conference">Conference</option><option value="custom">Custom</option></select></div>';
          html += '<div class="edit-field"><div class="edit-field-label">Band Count</div><select class="edit-field-select" data-field="settings.bandCount"><option value="3">3-Band</option><option value="5">5-Band</option><option value="10" selected>10-Band</option><option value="31">31-Band</option></select></div>';
        } else {
          html += '<div class="edit-section-title">DSP PROCESSING</div>';
          html += '<div class="edit-field"><div class="edit-field-checkbox"><input type="checkbox" data-field="settings.dspEnabled" checked><span>DSP Processing Enabled</span></div></div>';
        }
      }

      if (category === 'custom') {
        html += '<div class="edit-section-title">CUSTOM SETTINGS</div>';
        html += '<div class="edit-field"><div class="edit-field-label">Sampling Window (seconds)</div><input type="number" class="edit-field-input" data-field="settings.samplingWindow" value="60" min="1" max="300" step="1"></div>';
        html += '<div class="edit-field"><div class="edit-field-label">Reset Interval (seconds, 0=never)</div><input type="number" class="edit-field-input" data-field="settings.resetInterval" value="3600" min="0" max="86400" step="60"></div>';
      }

      html += '<div class="edit-section-title">UPDATE SETTINGS</div>';
      html += `<div class="edit-field"><div class="edit-field-label">Update Frequency (ms)</div><select class="edit-field-select" data-field="metadata.updateFrequency"><option value="100">100ms</option><option value="500">500ms</option><option value="1000" selected>1000ms</option><option value="2000">2000ms</option></select></div>`;
      html += `<div class="edit-field"><div class="edit-field-label">Priority</div><select class="edit-field-select" data-field="metadata.priority"><option value="low">Low</option><option value="medium" selected>Medium</option><option value="high">High</option><option value="critical">Critical</option></select></div>`;

      return html;
    }

    function generateAllParameterBoxes(stationId) {
      const grid = document.getElementById('params-grid');
      grid.innerHTML = ''; // Clear existing

      allParameters.forEach(param => {
        const config = parameterConfigs[param.id] || {};
        const ranges = config.ranges || { min: 0, max: 100, recommendedMin: 20, recommendedMax: 80 };
        const thresholds = config.thresholds || { criticalLow: 10, warningLow: 20, warningHigh: 80, criticalHigh: 95 };
        const optimal = (ranges.recommendedMin + ranges.recommendedMax) / 2;
        const optimalPercent = ((optimal - ranges.min) / (ranges.max - ranges.min)) * 100;

        // Position zones centered on optimal value
        // Green zone: 30% width centered on optimal
        const greenWidth = 30;
        const greenLeft = Math.max(0, optimalPercent - greenWidth / 2);
        const greenRight = Math.min(100, optimalPercent + greenWidth / 2);

        // Yellow zones: 20% on each side
        const yellowWidth = 20;
        const yellowLowLeft = Math.max(0, greenLeft - yellowWidth);
        const yellowHighRight = Math.min(100, greenRight + yellowWidth);

        // Red zones: fill remaining space
        const redLowWidth = yellowLowLeft;
        const redHighLeft = greenRight + yellowWidth;
        const redHighWidth = Math.max(0, 100 - redHighLeft);

        const box = document.createElement('div');
        box.className = 'monitoring-box--small';
        box.id = `param-${param.id.replace(/\./g, '-')}`;

        box.innerHTML = `
          <div class="expand-icon" onclick="toggleExpand('${param.id.replace(/\./g, '-')}')">
            <svg viewBox="0 0 24 24">
              <path d="M7 10l5 5 5-5z"/>
            </svg>
          </div>
          <div class="box-header">
            <div class="box-title">${param.name.toUpperCase()}</div>
            <div class="status-badge good" id="badge-${param.id.replace(/\./g, '-')}">GOOD</div>
          </div>
          <div class="box-value good" id="val-${param.id.replace(/\./g, '-')}">
            0<span class="box-unit">${param.unit}</span>
          </div>
          <div class="bar-container">
            <div class="bar-range-bg">
              <div class="bar-zone-critical-low" style="left: 0%; width: ${redLowWidth}%;"></div>
              <div class="bar-zone-warning-low" style="left: ${yellowLowLeft}%; width: ${yellowWidth}%;"></div>
              <div class="bar-zone-operational" style="left: ${greenLeft}%; width: ${greenWidth}%;"></div>
              <div class="bar-zone-warning-high" style="left: ${greenRight}%; width: ${yellowWidth}%;"></div>
              <div class="bar-zone-critical-high" style="left: ${redHighLeft}%; width: ${redHighWidth}%;"></div>
              <div class="bar-optimal-marker" style="left: ${optimalPercent}%;"></div>
              <div class="bar-current-value good" id="bar-${param.id.replace(/\./g, '-')}" style="width: 0%;">
                <div class="bar-current-indicator"></div>
              </div>
            </div>
            <div class="bar-labels">
              <span>${ranges.min}${param.unit}</span>
              <span class="bar-label-operational">${ranges.recommendedMin}-${ranges.recommendedMax}${param.unit}</span>
              <span>${ranges.max}${param.unit}</span>
            </div>
          </div>
          <div class="range-info">
            <div class="range-item">
              <div class="range-item-label">CURRENT</div>
              <div class="range-item-value good" id="current-${param.id.replace(/\./g, '-')}">0${param.unit}</div>
            </div>
            <div class="range-item">
              <div class="range-item-label">OPTIMAL</div>
              <div class="range-item-value optimal" id="optimal-${param.id.replace(/\./g, '-')}">${optimal.toFixed(0)}${param.unit}</div>
            </div>
            <div class="range-item">
              <div class="range-item-label">DEVIATION</div>
              <div class="range-item-value good" id="dev-${param.id.replace(/\./g, '-')}">0${param.unit}</div>
            </div>
          </div>
          <div class="edit-fields" id="edit-${param.id.replace(/\./g, '-')}">
            ${generateEditFieldsHTML(param, config)}
            <div class="edit-actions">
              <button class="btn-save" onclick="saveParameter('${param.id}')">Save</button>
              <button class="btn-cancel" onclick="toggleExpand('${param.id.replace(/\./g, '-')}')">Cancel</button>
            </div>
          </div>
          <div class="box-path">${param.cat} / ${param.path}</div>
        `;

        grid.appendChild(box);
      });
    }

    // ============================================
    // Load Parameter Configurations
    // ============================================
    let parameterConfigs = {};

    async function loadParameterConfigs() {
      try {
        // Load all parameter configs to get accurate optimal/min/max values
        const response = await fetch('/config/parameters/index.json');
        const index = await response.json();

        for (const param of index.parameters) {
          try {
            const configResp = await fetch(`/config/parameters/${param.file}`);
            const config = await configResp.json();
            parameterConfigs[param.id] = config;
          } catch(e) {
            console.warn('Could not load config for', param.id);
          }
        }

        console.log('Loaded', Object.keys(parameterConfigs).length, 'parameter configs');
      } catch(e) {
        console.error('Error loading parameter configs:', e);
      }
    }

    // Load configs on startup
    loadParameterConfigs();

    // ============================================
    // WebSocket Connection for Live Data
    // ============================================
    const socket = io('http://20.170.155.53:3021');
    let stationsData = {};

    socket.on('connect', () => {
      console.log('‚úì Connected to monitoring server');
    });

    socket.on('disconnect', () => {
      console.log('‚úó Disconnected from monitoring server');
    });

    // Receive initial stations state
    socket.on('stations-state', (stations) => {
      console.log('Received stations state:', Object.keys(stations).length, 'stations');
      stationsData = stations;
      updateAllStations(stations);
    });

    // Receive real-time updates
    socket.on('station-update', (data) => {
      const { stationId, metrics } = data;
      if (stationsData[stationId]) {
        stationsData[stationId].metrics = metrics;
        updateStationDisplay(stationId, metrics);
      }
    });

    function updateAllStations(stations) {
      // Update all stations on initial load
      Object.keys(stations).forEach(stationId => {
        updateStationDisplay(stationId, stations[stationId].metrics);
      });
    }

    function updateStationDisplay(stationId, metrics) {
      // Update the values in the UI based on station ID
      // Station 1 (index 0 in the grid) and Station 2 (index 1)
      if (stationId === 'station-1') {
        updateStation1(metrics);
      } else if (stationId === 'station-2') {
        updateStation2(metrics);
      } else if (stationId === 'station-3') {
        // Auto-show Station-3 in Level 2 detailed view (acts as container for metrics)
        // Only navigate if we're not already viewing Station-3
        if (currentStationId !== 'station-3') {
          console.log('[Station-3] Received', Object.keys(metrics).length, 'parameters - auto-showing Level 2');
          showLevel2('station-3');
        }
      }

      // If we're viewing Level 2 for this station, update all 75 parameters
      if (currentStationId === stationId && document.getElementById('level2').style.display !== 'none') {
        updateAllParameters(metrics);
      }
    }

    function updateAllParameters(metrics) {
      // Update all 75 parameter values
      allParameters.forEach(param => {
        const keys = param.path.split('.');
        let value = metrics;

        // Navigate through nested object
        for (const key of keys) {
          value = value?.[key];
          if (value === undefined) break;
        }

        if (value !== undefined && typeof value === 'number') {
          const config = parameterConfigs[param.id] || {};
          const ranges = config.ranges || { min: 0, max: 100, recommendedMin: 20, recommendedMax: 80 };
          const optimal = (ranges.recommendedMin + ranges.recommendedMax) / 2;
          const optimalPercent = ((optimal - ranges.min) / (ranges.max - ranges.min)) * 100;

          // Calculate zone boundaries (same as in generateAllParameterBoxes)
          const greenWidth = 30;
          const greenLeft = Math.max(0, optimalPercent - greenWidth / 2);
          const greenRight = Math.min(100, optimalPercent + greenWidth / 2);
          const yellowWidth = 20;
          const yellowLowLeft = Math.max(0, greenLeft - yellowWidth);
          const yellowHighRight = Math.min(100, greenRight + yellowWidth);

          // Convert value to percentage position on bar
          const valuePercent = ((value - ranges.min) / (ranges.max - ranges.min)) * 100;

          const formattedValue = Number.isInteger(value) ? value : value.toFixed(1);
          const paramId = param.id.replace(/\./g, '-');

          // Determine status based on zone position
          let status = 'good';
          if (valuePercent >= greenLeft && valuePercent <= greenRight) {
            status = 'good';
          } else if (valuePercent >= yellowLowLeft && valuePercent <= yellowHighRight) {
            status = 'warning';
          } else {
            status = 'critical';
          }

          // Update box border color
          const boxEl = document.getElementById(`param-${paramId}`);
          if (boxEl) {
            if (status === 'critical') {
              boxEl.style.borderColor = '#ef4444';
            } else if (status === 'warning') {
              boxEl.style.borderColor = '#f59e0b';
            } else {
              boxEl.style.borderColor = '#10b981';
            }
          }

          // Update status badge
          const badgeEl = document.getElementById(`badge-${paramId}`);
          if (badgeEl) {
            badgeEl.className = `status-badge ${status}`;
            badgeEl.textContent = status.toUpperCase();
          }

          // Update main value
          const el = document.getElementById(`val-${paramId}`);
          if (el) {
            el.className = `box-value ${status}`;
            el.innerHTML = `${formattedValue}<span class="box-unit">${param.unit}</span>`;
          }

          // Update bar width (normalize to min-max range)
          const barEl = document.getElementById(`bar-${paramId}`);
          if (barEl) {
            const percentage = ((value - ranges.min) / (ranges.max - ranges.min)) * 100;
            const clampedPercentage = Math.min(100, Math.max(0, percentage));
            barEl.style.width = clampedPercentage + '%';
            barEl.className = `bar-current-value ${status}`;
          }

          // Update current value
          const currentEl = document.getElementById(`current-${paramId}`);
          if (currentEl) {
            currentEl.className = `range-item-value ${status}`;
            currentEl.textContent = formattedValue + param.unit;
          }

          // Update deviation from actual optimal value
          const devEl = document.getElementById(`dev-${paramId}`);
          if (devEl) {
            const deviation = value - optimal;
            const sign = deviation >= 0 ? '+' : '';
            devEl.className = `range-item-value ${status}`;
            devEl.textContent = sign + deviation.toFixed(1) + param.unit;
          }
        }
      });
    }

    function updateStation1(metrics) {
      // Update Station 1: ARI RECEIVE with live data from all 75 parameters
      const buffer = metrics.buffer?.total || 0;
      const latency = metrics.latency?.avg || 0;
      const snr = metrics.audioQuality?.snr || 0;

      // Update buffer value and bar
      const bufferEl = document.getElementById('station1-buffer-value');
      if (bufferEl) bufferEl.innerHTML = buffer.toFixed(1) + '<span class="box-unit">%</span>';

      const bufferBar = document.getElementById('station1-buffer-bar');
      if (bufferBar) bufferBar.style.width = buffer + '%';

      const bufferCurrent = document.getElementById('station1-buffer-current');
      if (bufferCurrent) bufferCurrent.textContent = buffer.toFixed(1) + '%';

      // Update latency
      const latencyEl = document.getElementById('station1-latency-value');
      if (latencyEl) latencyEl.innerHTML = Math.round(latency) + '<span class="param-item-unit">ms</span>';

      // Update SNR
      const snrEl = document.getElementById('station1-snr-value');
      if (snrEl) snrEl.innerHTML = snr.toFixed(1) + '<span class="param-item-unit">dB</span>';
    }

    function updateStation2(metrics) {
      // Update Station 2: UDP TRANSMIT with live data from all 75 parameters
      const buffer = metrics.buffer?.total || 0;
      const latency = metrics.latency?.avg || 0;
      const snr = metrics.audioQuality?.snr || 0;

      // Update buffer value and bar
      const bufferEl = document.getElementById('station2-buffer-value');
      if (bufferEl) bufferEl.innerHTML = buffer.toFixed(1) + '<span class="box-unit">%</span>';

      const bufferBar = document.getElementById('station2-buffer-bar');
      if (bufferBar) bufferBar.style.width = buffer + '%';
    }

    // ============================================
    // Expand/Collapse Parameter Box Functions
    // ============================================
    function toggleExpand(paramId) {
      const box = document.getElementById(`param-${paramId}`);
      if (!box) return;

      // Close any other expanded boxes first
      const allBoxes = document.querySelectorAll('.monitoring-box--small.expanded');
      allBoxes.forEach(b => {
        if (b.id !== `param-${paramId}`) {
          b.classList.remove('expanded');
        }
      });

      // Toggle current box
      box.classList.toggle('expanded');
    }

    function saveParameter(paramId) {
      console.log('Saving parameter:', paramId);

      // Get all input values from edit fields
      const editContainer = document.getElementById(`edit-${paramId.replace(/\./g, '-')}`);
      if (!editContainer) return;

      const inputs = editContainer.querySelectorAll('.edit-field-input, .edit-field-select');
      const checkboxes = editContainer.querySelectorAll('input[type="checkbox"]');

      const config = {
        id: paramId,
        thresholds: {},
        ranges: {},
        alerts: {},
        metadata: {},
        operationalSettings: {}
      };

      // Process number/text inputs and selects
      inputs.forEach(input => {
        const field = input.getAttribute('data-field');
        if (!field) return;

        const value = input.value === '' ? null : (input.type === 'number' ? parseFloat(input.value) : input.value);
        const parts = field.split('.');

        if (parts.length === 2) {
          config[parts[0]][parts[1]] = value;
        } else if (parts.length === 1) {
          config[parts[0]] = value;
        }
      });

      // Process checkboxes
      checkboxes.forEach(checkbox => {
        const field = checkbox.getAttribute('data-field');
        if (!field) return;

        const parts = field.split('.');
        if (parts.length === 2) {
          config[parts[0]][parts[1]] = checkbox.checked;
        } else if (parts.length === 1) {
          config[parts[0]] = checkbox.checked;
        }
      });

      console.log('Configuration to save:', config);

      // In production, this would:
      // 1. POST to: /api/stations/${currentStationId}/parameters/${paramId}/config
      // 2. Server updates the parameter config file in /config/parameters/
      // 3. All monitoring stations reload the updated config

      alert(`‚úì Configuration saved for ${paramId}\n\nThis will be saved to the parameter's config file:\n/config/parameters/${paramId.replace('.', '/')}.json\n\n` + JSON.stringify(config, null, 2));

      // Close the expanded box
      toggleExpand(paramId.replace(/\./g, '-'));
    }
  </script>

</body>
</html>
